prototype(Litespeed.Presentation:Block.CountNumbersInText) < prototype(Neos.Fusion:Component) {
    content = ${value}
    inBackend = false

    @if.hasContent = ${this.content}

    renderer = afx`
        {props.inBackend ? props.content : ''}
        <Neos.Fusion:Loop @if={!props.inBackend} items={Carbon.String.splitIntegerAndString(props.content)}>
            <Litespeed.Presentation:Atom.Counter content={item} />
        </Neos.Fusion:Loop>
    `
}
